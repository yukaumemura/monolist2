
  <h2 class="box-title">会員登録</h2>
 <div class="row">
        <div class="col-sm-12">
          <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
            <div class="form-group">
              <label for="input-name" class="col-sm-2 control-label">名前(フリガナ）</label>
              <div class="col-sm-10">
                <%= f.text_field :furigana, class: "form-control", placeholder: "フリガナ" %>
              </div>
            </div>
            <div class="form-group">
              <label for="input-name" class="col-sm-2 control-label">名前</label>
              <div class="col-sm-10">
                 <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
              </div>
            </div>
            <div class="form-group">
              <label for="input-mail" class="col-sm-2 control-label">メールアドレス</label>
              <div class="col-sm-10">
                <%= f.text_field :email, class: "form-control", placeholder: "メールアドレス" %>>
              </div>
            </div>
            <div class="form-group">
              <label for="input-mail" class="col-sm-2 control-label">電話番号</label>
              <div class="col-sm-10">
                <%= f.text_field :tel, class: "form-control", placeholder: "電話番号：0500×××○○○○" %>
              </div>
            </div>
            <div class="form-group">
              <label for="input-mail" class="col-sm-2 control-label">FAX</label>
              <div class="col-sm-10">
                 <%= f.text_field :fax, class: "form-control", placeholder: "FAX:0600-×××-○○○○" %>
              </div>
            </div>
            <div class="form-group">
              <label for="input-mail" class="col-sm-2 control-label">パスワード</label>
              <div class="col-sm-10">
                <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
              </div>
            </div>
            <div class="form-group">
              <label for="input-mail" class="col-sm-2 control-label">郵便番号</label>
              <div class="col-sm-10">
               <%= f.text_field :post_num, class: "form-control", placeholder: "郵便番号" %>
              </div>
            </div>
            <div class="form-group">
              <label for="input-mail" class="col-sm-2 control-label">都道府県</label>
              <div class="col-sm-10">
                <%= f.text_field :prefectures, class: "form-control", placeholder: "都道府県" %>
              </div>
            </div>
             <div class="form-group">
              <label for="input-mail" class="col-sm-2 control-label">市区町村</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="input-mail" placeholder="千代田区" required="required">
              </div>
            </div>
            <div class="form-group">
              <label for="input-mail" class="col-sm-2 control-label">番地以下</label>
              <div class="col-sm-10">
                <%= f.text_field :area, class: "form-control", placeholder: "番地以下" %>
              </div>
            </div>
            <div class="form-group">
              <label for="input-mail" class="col-sm-2 control-label">建物名</label>
              <div class="col-sm-10">
                <%= f.text_field :building, class: "form-control", placeholder: "建物名" %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">更新</button>
              </div>
            </div>
            <% end %>
          </form>
        </div>
      </div>