<div class="box">
  <h2 class="box-title">会員登録</h2>
  <div class="box-inner">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.text_field :nameFurigana, class: "form-control", placeholder: "フリガナ" %>
      </div>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
      </div>
      <div class="form-group">
        <%= f.text_field :email, class: "form-control", placeholder: "メールアドレス" %>
      </div>
       <div class="form-group">
        <%= f.text_field :users_tel, class: "form-control", placeholder: "電話番号：0500-×××-○○○○" %>
      </div>
      <div class="form-group">
        <%= f.text_field :users_FAX, class: "form-control", placeholder: "FAX:0600-×××-○○○○" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード（確認）" %>
      </div>
      <div class="form-group">
        <%= f.text_field :users_post_num, class: "form-control", placeholder: "郵便番号" %>
      </div>
      <div class="form-group">
        <%= f.text_field :users_prefectures, class: "form-control", placeholder: "都道府県" %>
      </div>
      <div class="form-group">
        <%= f.text_field :users_municipality, class: "form-control", placeholder: "市区町村" %>
      </div>
      <div class="form-group">
        <%= f.text_field :users_area, class: "form-control", placeholder: "番地以下" %>
      </div>
      <div class="form-group">
        <%= f.text_field :users_building, class: "form-control", placeholder: "建物名" %>
      </div>
      
      <div class="submit-group">
        <%= f.submit "登録する", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
 